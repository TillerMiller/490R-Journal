<% title 'Edit Profile'%>
<h1>Edit Profile</h1>
<%= form_for @user do |f| %>
	<%= f.error_messages%>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= f.submit 'Update', :class => 'btn' %></p>
<% end %>