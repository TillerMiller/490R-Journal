<h1>Users Index</h1>
<% @users.each do |user| %>
	<h3><%= link_to_unless_current user.email, user %></h3>
	<span class="title"><%= user.id %>. User:</span> <%= user.name %><br/>
	<% if current_user == user %>
	<%= link_to 'Delete Profile', user, method: :delete, data: { confirm: 'Are you sure you want to completely remove the profile?' }, :class => "btn btn-danger" %><br/>
	<% end %>
<% end %>