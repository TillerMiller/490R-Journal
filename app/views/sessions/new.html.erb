<% title 'Login' %>
<h1>Login</h1>

<%= form_tag sessions_path, :method=> 'post' do %>
	<p>
		<%= label_tag :email %>
		<%= text_field_tag :email %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<hr/>
	<p>Or log in using</p>
	<%= link_to "Facebook", '/auth/facebook' %>
	<p class="button"><%= submit_tag 'Login' %> or click here to <%= link_to 'register', new_user_path %></p>
<% end %>
